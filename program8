import java.util.Arrays;
public class DijkstraShortestPath {
    static final int INF = Integer.MAX_VALUE;

    // Method to find the vertex with minimum distance value from the set of vertices not yet processed
    int minDistance(int[] dist, boolean[] sptSet, int vertices) {
        int min = INF, minIndex = -1;

        for (int v = 0; v < vertices; v++) {
            if (!sptSet[v] && dist[v] <= min) {
                min = dist[v];
                minIndex = v;
            }
        }

        return minIndex;
    }

    // Dijkstra's algorithm to find shortest path from a single source
    void dijkstra(int[][] graph, int src) {
        int vertices = graph.length;
        int[] dist = new int[vertices];
        boolean[] sptSet = new boolean[vertices];

        // Initialize all distances as INFINITE and sptSet[] as false
        Arrays.fill(dist, INF);
        dist[src] = 0;

        // Find the shortest path for all vertices
        for (int count = 0; count < vertices - 1; count++) {
            // Pick the minimum distance vertex from the set of vertices not yet processed
            int u = minDistance(dist, sptSet, vertices);
            sptSet[u] = true;

            // Update dist value of the adjacent vertices of the picked vertex
            for (int v = 0; v < vertices; v++) {
                if (!sptSet[v] && graph[u][v] != 0 && dist[u] != INF && dist[u] + graph[u][v] < dist[v]) {
                    dist[v] = dist[u] + graph[u][v];
                }
            }
        }

        // Print the constructed distance array
        printSolution(dist, src);
    }

    // Method to print the solution
    void printSolution(int[] dist, int src) {
        System.out.println("Vertex\tDistance from Source " + src);
        for (int i = 0; i < dist.length; i++) {
            System.out.println(i + "\t\t" + (dist[i] == INF ? "INF" : dist[i]));
        }
    }

    // Driver method to test the Dijkstra algorithm
    public static void main(String[] args) {
        // Adjacency matrix representation of the graph
        int[][] graph = {
            {0, 10, 0, 30, 100},
            {10, 0, 50, 0, 0},
            {0, 50, 0, 20, 10},
            {30, 0, 20, 0, 60},
            {100, 0, 10, 60, 0}
        };

        DijkstraShortestPath dsp = new DijkstraShortestPath();
        dsp.dijkstra(graph, 0);  // Taking node 0 as the source
    }
}
Output:
Vertex	Distance from Source 0
0		0
1		10
2		50
3		30
4		60

=== Code Execution Successful ===
